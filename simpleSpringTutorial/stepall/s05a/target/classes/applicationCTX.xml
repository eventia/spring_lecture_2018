<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student1" class="com.wind.sp05.Student">
		<constructor-arg>
			<value>토드 엔더슨</value>
		</constructor-arg>
		<constructor-arg>
			<value>15살</value>
		</constructor-arg>
		<constructor-arg>
			<value>1학년</value>
		</constructor-arg>
		<constructor-arg>
			<value>20번</value>
		</constructor-arg>
	</bean>
	
	<bean id="student2" class="com.wind.sp05.Student">
		<constructor-arg value="닐 페리" />
		<constructor-arg value="15살" />
		<constructor-arg value="1학년" />
		<constructor-arg value="10번" />
	</bean>
	
	<bean id="studentInfo" class="com.wind.sp05.StudentInfo">
		<constructor-arg>
			<ref bean="student1" />
		</constructor-arg>
	</bean>
	
</beans>
